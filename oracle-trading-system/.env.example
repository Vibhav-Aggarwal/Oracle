# Oracle Trading System - Environment Configuration
# Copy this file to .env and fill in your values

# DELTA EXCHANGE API (Required)
DELTA_API_KEY=your_api_key_here
DELTA_API_SECRET=your_api_secret_here
DELTA_BASE_URL=https://api.india.delta.exchange/v2

# TRADING CONFIGURATION
SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT
STOP_LOSS=0.07
TAKE_PROFIT=0.21
RISK_PER_TRADE=0.05
RSI_PERIOD=14
RSI_ENTRY_LOW=30
RSI_ENTRY_HIGH=60
RSI_EXIT=70
FAST_SMA=10
SLOW_SMA=50

# RISK MANAGEMENT
MAX_DAILY_LOSS=0.10
MAX_DRAWDOWN=0.25
MAX_CONCURRENT_TRADES=3
COOL_DOWN_AFTER_LOSS=300

# NOTIFICATIONS (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# MONITORING
PROMETHEUS_PORT=8080
LOG_LEVEL=INFO
JSON_LOGS=true

# DATABASE
DATABASE_URL=sqlite:///data/oracle_trades.db
