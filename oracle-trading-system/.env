# Oracle Trading System - Production Environment
# IMPORTANT: Fill in your actual API credentials below

# Delta Exchange API (India)
DELTA_API_KEY=YOUR_API_KEY_HERE
DELTA_API_SECRET=YOUR_API_SECRET_HERE
DELTA_BASE_URL=https://api.india.delta.exchange/v2

# Trading Configuration (Optimized from backtesting)
SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT
STOP_LOSS=0.07
TAKE_PROFIT=0.21
RISK_PER_TRADE=0.05
RSI_PERIOD=14
RSI_ENTRY_LOW=30
RSI_ENTRY_HIGH=60
RSI_EXIT=70
FAST_SMA=10
SLOW_SMA=50

# Risk Management
MAX_DAILY_LOSS=0.10
MAX_DRAWDOWN=0.25
MAX_CONCURRENT_TRADES=3
COOL_DOWN_AFTER_LOSS=300

# Monitoring
PROMETHEUS_PORT=8080
LOG_LEVEL=INFO
JSON_LOGS=true

# Database
DATABASE_URL=sqlite:///data/oracle_trades.db

# Close positions on shutdown (safety)
CLOSE_ON_SHUTDOWN=false
